<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fiLayout"
    android:layout_height="match_parent"
    android:layout_width="330dp"
    android:background="@drawable/layout_border_gray"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fptitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_solid"
        android:padding="3dp"
        android:layout_margin="2dp"
        android:textSize="28dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="3dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fptitle" />

    <TextView
        android:id="@+id/fpname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/profile_image"

        />

    <TextView
        android:id="@+id/fpid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/fpname"/>

    <TextView
        android:id="@+id/fpcollage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/fpid"
        />

</androidx.constraintlayout.widget.ConstraintLayout>