<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bottom">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/layout_bottom"
            >

            <TextView
                android:id="@+id/deleteScheduleTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="#77CCCCCC"
                android:paddingHorizontal="5dp"
                android:paddingVertical="2dp"
                android:ellipsize="marquee"
                android:focusable = "true"
                android:singleLine = "true"
                ></TextView>

            <TextView
                android:id="@+id/deleteScheduleDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="date"
                android:textSize="15sp"
                android:paddingHorizontal="5dp"
                android:paddingVertical="2dp"
                android:ellipsize="marquee"
                android:focusable = "true"
                android:singleLine = "true"
                ></TextView>

            <TextView
                android:id="@+id/deleteScheduleTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="time"
                android:textSize="15sp"
                android:paddingHorizontal="5dp"
                android:paddingVertical="2dp"
                android:ellipsize="marquee"
                android:focusable = "true"
                android:singleLine = "true"></TextView>
            <TextView
                android:id="@+id/deleteScheduleWeekday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="weekday"
                android:textSize="15sp"
                android:paddingHorizontal="5dp"
                android:paddingVertical="2dp"
                android:ellipsize="marquee"
                android:focusable = "true"
                android:singleLine = "true"></TextView>

        </LinearLayout>
        <Button
            android:id="@+id/deleteScheduleGoBtn"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:text="삭제">
        </Button>
    </LinearLayout>

</LinearLayout>