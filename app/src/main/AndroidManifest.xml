<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.teamone">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TeamOne">
        <activity android:name=".SignUpActivity"></activity>
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".FirstAuthActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <fragment android:name=".MainScheduleFragment"></fragment>
        <fragment android:name=".GroupListFragment"></fragment>
        <fragment android:name=".FriendListFragment"></fragment>
        <fragment android:name=".SettingsFragment"></fragment>

        <activity android:name=".changeInfo"></activity>
        <activity android:name=".LoginActivity"></activity>
        <activity android:name=".groupTable"></activity>
        <activity android:name=".groupAdder" android:theme="@android:style/Theme.Dialog"></activity>
        <activity android:name=".friendAdder" android:theme="@android:style/Theme.Dialog"></activity>
        <activity android:name=".friendInfo" android:theme="@android:style/Theme.Dialog"></activity>
        <activity android:name = ".groupMemberAdder"></activity>
        <activity android:name=".groupDeleter" android:theme="@android:style/Theme.Dialog"></activity>
        <activity
            android:name=".addSchedule"
            android:theme="@android:style/Theme.DeviceDefault.Light.Dialog" />
        <activity
            android:name=".addPlan"
            android:theme="@android:style/Theme.DeviceDefault.Light.Dialog" />
    </application>

</manifest>